<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detalhe_prova"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.code4u.agenda.DetalheProvaActivity"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00A8EC">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Materia"
                android:id="@+id/detalhe_materia"
                android:layout_margin="16dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data"
                android:id="@+id/detalhe_data"
                android:layout_margin="16dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/detalhe_prova_topicos"/>

    </LinearLayout>


</android.support.v7.widget.CardView>
